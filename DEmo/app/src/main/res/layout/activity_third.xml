<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="49dp"
            android:ems="10"
            android:inputType="phone" />

        <ImageButton
            android:id="@+id/imageButtonPhone"
            android:layout_width="42dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/editTextPhone"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="29dp"
            app:srcCompat="@android:drawable/ic_menu_call"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/editTextWeb"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editTextPhone"
            android:layout_marginTop="122dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/imageButtonWeb"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/imageButtonPhone"
            android:layout_alignTop="@+id/editTextWeb"
            app:srcCompat="@android:drawable/ic_menu_view"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/imageButtonCamera"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#1976D2"
            app:srcCompat="@android:drawable/ic_menu_camera" />


    </RelativeLayout>


</RelativeLayout>